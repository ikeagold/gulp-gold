{
  "name": "gulp-gold",
  "description": "Custom Gulp pack",
  "version": "2.0.0",
  "main": "gulpfile.js",
  "author": "Artur Parkhisenko <ikeagold@gmail.com> (https://arturparkhisenko.github.io/)",
  "homepage": "https://github.com/arturparkhisenko/gulp-gold/",
  "repository": "arturparkhisenko/gulp-gold",
  "bugs": {
    "url": "https://github.com/arturparkhisenko/gulp-gold/issues"
  },
  "license": "MIT",
  "keywords": [
    "assets",
    "babel",
    "build",
    "css",
    "eslint",
    "format",
    "gulp",
    "html",
    "js",
    "lint",
    "postcss",
    "prettier",
    "tool",
    "webpack"
  ],
  "type": "module",
  "engineStrict": true,
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production gulp",
    "dev": "npm run start",
    "gulp": "./node_modules/.bin/gulp",
    "format": "prettier --write './src/**/*.{js,jsx,css}'",
    "format:check": "prettier --check './src/**/*.{js,jsx,css}' --silent",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:fix": "npm run lint:styles --fix && npm run lint:scripts --fix",
    "lint:scripts": "eslint 'src/**/*.{js,jsx}'",
    "lint:styles": "stylelint 'src/**/*.css'",
    "np": "np --no-yarn",
    "prod": "cross-env NODE_ENV=production gulp serve",
    "start": "cross-env NODE_ENV=development gulp serve",
    "test": "echo \"Error: no test specified\""
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/eslint-parser": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.29.3",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.14",
    "del": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-load-plugins": "^2.0.7",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-size": "^4.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "plugin-error": "^1.0.1",
    "postcss": "^8.4.24",
    "postcss-browser-reporter": "^0.6.0",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^7.1.0",
    "postcss-reporter": "^7.0.5",
    "postcss-url": "^10.1.3",
    "prettier": "^2.8.8",
    "stylelint": "^15.7.0",
    "stylelint-config-standard": "^33.0.0",
    "webpack": "^5.86.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.5"
  }
}
