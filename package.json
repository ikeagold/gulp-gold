{
  "name": "gulp-gold",
  "description": "Custom Gulp pack",
  "version": "2.0.0",
  "main": "gulpfile.js",
  "author": "Artur Parkhisenko (https://arturparkhisenko.github.io/)",
  "homepage": "https://github.com/arturparkhisenko/gulp-gold/",
  "repository": "arturparkhisenko/gulp-gold",
  "bugs": {
    "url": "https://github.com/arturparkhisenko/gulp-gold/issues"
  },
  "license": "MIT",
  "keywords": [
    "assets",
    "babel",
    "build",
    "css",
    "eslint",
    "format",
    "gulp",
    "html",
    "js",
    "lint",
    "postcss",
    "prettier",
    "tool",
    "webpack"
  ],
  "type": "module",
  "engineStrict": true,
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production gulp",
    "dev": "npm run start",
    "gulp": "./node_modules/.bin/gulp",
    "format": "prettier --write './src/**/*.{js,jsx,css}'",
    "format:check": "prettier --check './src/**/*.{js,jsx,css}' --silent",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:fix": "npm run lint:styles --fix && npm run lint:scripts --fix",
    "lint:scripts": "eslint",
    "lint:styles": "stylelint 'src/**/*.css'",
    "np": "np --no-yarn",
    "prod": "cross-env NODE_ENV=production gulp serve",
    "start": "cross-env NODE_ENV=development gulp serve",
    "test": "echo \"Error: no test specified\""
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/preset-env": "^7.24.4",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "cross-env": "^7.0.3",
    "cssnano": "^6.1.2",
    "del": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.1",
    "fancy-log": "^2.0.0",
    "gulp": "^5.0.0",
    "gulp-cli": "^3.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^9.0.0",
    "gulp-load-plugins": "^2.0.8",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^10.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-size": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "plugin-error": "^2.0.1",
    "postcss": "^8.4.38",
    "postcss-browser-reporter": "^0.7.0",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^9.5.4",
    "postcss-reporter": "^7.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "webpack": "^5.91.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.4"
  }
}
